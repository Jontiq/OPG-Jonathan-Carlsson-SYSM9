<Application x:Class="OPG_Jonathan_Carlsson_SYSM9.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OPG_Jonathan_Carlsson_SYSM9"
             xmlns:managers="clr-namespace:OPG_Jonathan_Carlsson_SYSM9.Managers"
             StartupUri="Views/LoginWindow.xaml">
    <Application.Resources>
        <!--UserManager and NavigationManager exists here so that we're able to use the same instance of their classes everywhere in the application-->
        <managers:UserManager x:Key="UserManager"/>
        <managers:NavigationManager x:Key="NavigationManager"/>
        <managers:RecipeManager x:Key="RecipeManager"/> 
    </Application.Resources>
</Application>
