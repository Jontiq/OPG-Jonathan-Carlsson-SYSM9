<Window x:Class="OPG_Jonathan_Carlsson_SYSM9.Views.RecipeWindows.RecipeDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OPG_Jonathan_Carlsson_SYSM9.Views.RecipeWindows"
        mc:Ignorable="d"
        Title="RecipeDetailsWindow" Height="500" Width="510" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1.2*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Recipe Details"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontSize="20"
                   FontWeight="Bold"/> 
        <!--TITLE-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2.5*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Title: "
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       FontSize="15"/>
            <!--BIND TO TITLE-->
            <TextBox Grid.Column="1"
                     Text="Bajsmackan"
                     VerticalAlignment="Center"
                     FontSize="15"
                     Margin="5"
                     IsReadOnly="True"/>
        </Grid>
        <!--CATEGORY-->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2.5*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Category: "
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                FontSize="15"/>
            <!--BIND TO CATEGORY-->
            <TextBox Grid.Column="1"
                     Text="Breakfast"
                     VerticalAlignment="Center"
                     FontSize="15"
                     Margin="5"
                     IsReadOnly="True"/>
        </Grid>
        <!--INSTRUCTIONS-->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2.5*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Instructions: "
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       FontSize="15"/>
            <!--BIND TO CATEGORY-->
            <TextBox Grid.Column="1"
                     Text="Do this, then that!"
                     VerticalAlignment="Center"
                     FontSize="15"
                     Margin="5"
                     Height="100"
                     IsReadOnly="True"/>
        </Grid>
        <!--INGREDIENTS-->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2.5*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Ingredients: "
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       FontSize="15"/>
            <!--BIND TO CATEGORY-->
            <TextBox Grid.Column="1"
                     Text="Milk, onion"
                     VerticalAlignment="Center"
                     FontSize="15"
                     Margin="5"
                     Height="100"
                     IsReadOnly="True"/>
        </Grid>
        <!--CREATED BY AND DATE-->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2.5*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--CREATED BY USERNAME-->
            <TextBlock Text="Created by:  "
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       FontSize="15"/>
            <!--BIND TO USERNAME-->
            <TextBlock Grid.Column="1"
                       Text="USERNAME"
                       VerticalAlignment="Center"
                       FontSize="15"
                       Margin="5"/>
            
            <!--CREATED DATE-->
            <TextBlock Text="Creation Date:  "
                       Grid.Row="1"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       FontSize="15"/>
            <!--BIND TO DATE-->
            <TextBlock Grid.Column="1"
                       Grid.Row="1"
                       Text="YYYY-MM-DD"
                       VerticalAlignment="Center"
                       FontSize="15"
                       Margin="5"/>
        </Grid>
        <!--BUTTONS-->
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!--GOBACK-->
            <Button Content="Go Back"
                    Margin="10"
                    Width="150"/>
            <!--EDIT-->
            <Button Content="Edit"
                    Grid.Column="1"
                    Margin="10"
                    Width="150"/>
            <!--SAVE-->
            <Button Content="Save"
                    Grid.Column="2"
                    Margin="10"
                    Width="150"/>
        </Grid>
    </Grid>
</Window>
