<Window x:Class="OPG_Jonathan_Carlsson_SYSM9.Views.RecipeWindows.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OPG_Jonathan_Carlsson_SYSM9.Views.RecipeWindows"
        mc:Ignorable="d"
        Title="InfoWindow" Height="600" Width="600" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Cookmaster Information"
           HorizontalAlignment="Center"
           VerticalAlignment="Top"
           FontSize="20"
           FontWeight="Bold"/>
        <StackPanel Grid.Row="1">
            <TextBlock 
                   Text="Welcome to CookMaster!"
                   Grid.Row="1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontSize="15"
                   Margin="5"
                   FontWeight="Bold"
                   TextWrapping="Wrap"/>
            <TextBlock 
                   Text="CookMaster is your personal recipe book where you can store, manage and explore all your favorite dishes in one place. The app is designed to make cooking simple, organized and inspiring."
                   Grid.Row="1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontSize="15"
                   Margin="5"
                   TextWrapping="Wrap"/>
            <TextBlock 
                   Text="Recipe List"
                   Grid.Row="1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontSize="15"
                   Margin="5"
                   FontWeight="Bold"
                   TextWrapping="Wrap"/>
            <TextBlock 
                   Text="This is your main page after logging in. Here you can view all your saved recipes and basic information such as title, date and category. Use the filter box to quickly find specific recipes. Select a recipe in the list and then use the buttons on the right to perform actions."
                   Grid.Row="1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontSize="15"
                   Margin="5"
                   TextWrapping="Wrap"/>
            <TextBlock 
                   Text="Buttons and their functions"
                   Grid.Row="1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontSize="15"
                   Margin="5"
                   FontWeight="Bold"
                   TextWrapping="Wrap"/>
            <TextBlock TextWrapping="Wrap" FontSize="15" Margin="5">
                Add Recipe – Opens a page where you can create and save a new recipe.
                <LineBreak/>
                Recipe Details – Opens the selected recipe so you can view or edit its full details.
                <LineBreak/>
                Remove Recipe – Deletes the selected recipe from your list.
                <LineBreak/>
                CookMaster Info – Opens this window with information about how the app works.
                <LineBreak/>
                Edit User – Opens your user settings where you can view and edit your account information.
                <LineBreak/>
                Sign Out – Logs you out and returns you to the login screen.
            </TextBlock>
            <TextBlock 
                   Text="CookMaster helps you stay organized, inspired and creative in the kitchen.
Discover, cook and enjoy, all in CookMaster!"
                   Grid.Row="1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontSize="15"
                   Margin="5"
                   TextWrapping="Wrap"/>
        </StackPanel>
        <Button Grid.Row="2"
                Command="{Binding GoBackCommand}"
                Content="Thanks for the info!"
                FontSize="13"
                Margin=" 18"/>
    </Grid>
</Window>
