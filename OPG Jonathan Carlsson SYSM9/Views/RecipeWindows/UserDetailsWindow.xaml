<Window x:Class="OPG_Jonathan_Carlsson_SYSM9.Views.RecipeWindows.UserDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OPG_Jonathan_Carlsson_SYSM9.Views.RecipeWindows"
        mc:Ignorable="d"
        Title="UserDetailsWindow" Height="300" Width="400" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="User Details"
           HorizontalAlignment="Center"
           VerticalAlignment="Top"
           FontSize="25"
           FontWeight="Bold"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--USERNAME-->
            <TextBlock Text="Username: "
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       FontSize="15"
                       FontWeight="Bold"/>
            <TextBlock Text="USERNAME "
                       Grid.Column="1"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="15"/>

            <!--COUNTRY-->
            <TextBlock Text="Country: "
                       Grid.Row="1"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       FontSize="15"
                       FontWeight="Bold"/>
            <TextBlock Text="COUNTRY "
                       Grid.Row="1"
                       Grid.Column="1"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="15"/>

            <!--ROLE-->
            <TextBlock Text="Role: "
                       Grid.Row="2"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       FontSize="15"
                       FontWeight="Bold"/>
            <TextBlock Text="ROLE "
                       Grid.Row="2"
                       Grid.Column="1"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="15"/>
            <!--ID-->
            <TextBlock Text="ID: "
                       Grid.Row="3"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       FontSize="15"
                       FontWeight="Bold"/>
            <TextBlock Text="ID "
                       Grid.Row="3"
                       Grid.Column="1"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="15"/>
        </Grid>
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!--BUTTONS-->
            <Button Content="Go Back"
                    Margin="8"/>
            <Button Content="Edit User"
                    Grid.Column="1"
                    Margin="8"/>
        </Grid>
    </Grid>
</Window>
